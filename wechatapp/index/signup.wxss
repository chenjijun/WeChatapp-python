/* index/signup.wxss */
.zhuceview{
  min-height: 100vh;
  background-color:#F2F2F2;
  display: flex;
  flex-direction: column;
  width: 100%;

}
.zhucetxt{
  display: flex;
  font-size: 40px;
  margin-left: 42%;
  margin-top: 20px;
  color: rgb(21, 9, 41);
  font-weight: bolder;
}
.required-input {
  margin-top: 30px;
  font-size: 20px;
  border-bottom: 2px solid gray;
}

.usertxt {
  margin-top: 50px;
  font-weight: bold;
  color: black;
  display: flex;
  height: 8px;
  font-family: "Microsoft YaHei";
  font-size: 20px;
}
.login{
  margin-left: 20%;
  margin-top: 40px;
  width: 60%;
  background-color: #278d04;
  color: #F2F2F2;
  border-radius: 20px;
}

.input{
  margin-left: 10%;
  margin-top: 40px;
  width: 80%;
  background-color: #ffffff;
  color: #000000;
  border-radius: 0px;
}