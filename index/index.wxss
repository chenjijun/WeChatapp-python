.input-container {
  margin-left: 10px;
  margin-top: 20px;
  border: 1px solid #848484; /* 设置黑色边框，宽度为1px */  
  border-radius: 0px; /* 可选：设置边框圆角 */  
  padding: 5px; /* 可选：设置内边距，使内容不会紧贴边框 */  
  width: 95%; /* 可选：设置输入框宽度为100%，根据需要调整 */  
  box-sizing: border-box; /* 可选：确保边框和内边距不会增加输入框的总宽度 */  
  height: 70px;
  background-color: snow;
  
}

